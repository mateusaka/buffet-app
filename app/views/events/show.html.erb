<h1>Evento <%= @event.name %></h1>

<dl>
    <dt>Nome</dt>
    <dd><%= @event.name %></dd>
    <dt>Descrição</dt>
    <dd><%= @event.description %></dd>
    <dt>Quantidade de pessoas</dt>
    <dd><%= @event.min_quantity %> - <%= @event.max_quantity %></dd>
    <dt>Duração</dt>
    <dd><%= @event.duration %> minutos</dd>
    <dt>Cardápio</dt>
    <dd><%= @event.menu %></dd>
    <dt>Bebida Alcoólica</dt>
    <dd>
        <% if @event.alcoholic_drink %>
            &#9989; Sim
        <% else %>
            &#10060; Não
        <% end %>
    </dd>
    <dt>Decoração</dt>
    <dd>
        <% if @event.party_decoration %>
            &#9989; Sim
        <% else %>
            &#10060; Não
        <% end %>
    </dd>
    <dt>Serviço de valete</dt>
    <dd>
        <% if @event.valet_service %>
            &#9989; Sim
        <% else %>
            &#10060; Não
        <% end %>
    </dd>
    <dt>Informações sobre o local do evento</dt>
    <dd><%= @event.local %></dd>
</dl>